<%= form_for [:sekret, @person] do |f| %>

	

	<% if @person.errors.any? %>
		<div id="error_explanation">
		    <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>
		 
		    <ul>
			    <% @person.errors.full_messages.each do |msg| %>
			      <li><%= msg %></li>
			    <% end %>
		    </ul>
		</div>
	<% end %>

	<fieldset>
		<label>
			Prefix
			<%= f.text_field :prefix %>
		</label>
		<label>
			Accepting Students
			<%= f.check_box :search %>
		</label>
	</fieldset>

	<fieldset>
		<label>
			First Name
			<%= f.text_field :fname %>
		</label>
		<label>
			Last Name
			<%= f.text_field :lname %>
		</label>
	</fieldset>

	<fieldset>
		<label>
			Title
			<%= f.text_field :title %>
		</label>
		<label>
			Author Name
			<%= f.text_field :auth_id %>
		</label>
	</fieldset>

	<fieldset>
		<label>
			Username
			<%= f.text_field :user_name %>
		</label>
		<label>
			Ext Email
			<%= f.text_field :email %>
		</label>
	</fieldset>

	<fieldset>
		<label>
			School
			<%= f.select :school, [[" ", :null], 'Biological Science', 'Biomedical Sciences', 'Mathematics', 'Psychology']  %>
		</label>
		<label>
			Position
			<%= f.select :position, [[" ", :null], 'faculty', 'staff', 'postdoc', 'grad', 'labtech', 'labman', 'affiliate', 'emeritus', 'alumni', 'nn-grad', 'nn-postdoc'] %>
		</label>
	</fieldset>

	<fieldset>
		<label>
			Boss
			<%= f.select :boss_id, [[" ", :null], ["D Fadool", 1], ["Arbeitman", 2], ["Bertram", 3], ["Bhide", 4], ["Blaber", 5], ["Bolanos", 6], ["Contreras", 7], ["Dewan", 188], ["Eckel", 8], ["J Fadool", 9], ["Feng", 110], ["Hajack", 167], ["Hammock", 10], ["Houpt", 11], ["Hull", 12], ["Hyson", 13], ["Johnson", 14], ["Kabbaj", 15], ["Kumar", 16], ["Lee", 17], ["Levenson", 18], ["Li", 19], ["Lyons", 20], ["Megraw", 21], ["Meredith", 22], ["Nowakowski", 23], ["Oclese", 24], ["Ren", 25], ["Rinaman", 155], ["Spector", 26], ["Stanwood", 27], ["Trombley", 28], ["Y Wang", 29], ["Z Wang", 30], ["Wilber", 147], ["Williams", 31], ["Zhang", 189], ["Zhou", 32]] %>
		</label>
		<label>
			Lab Name
			<%= f.select :lab_name, [[" ", :null], "D Fadool", "Arbeitman", "Bertram", "Bhide", "Blaber", "Bolanos", "Contreras", "Dewan", "Eckel", "J Fadool", "Feng", "Hajack", "Hammock", "Houpt", "Hull", "Hyson", "Johnson", "Kabbaj", "Kumar", "Lee", "Levenson", "Li", "Lyons", "Megraw", "Meredith", "Nowakowski", "Oclese", "Ren", "Rinaman", "Spector", "Stanwood", "Trombley", "Y Wang", "Z Wang","Wilber", "Williams", "Zhang", "Zhou"] %>
		</label>
	</fieldset>

	<fieldset>
		<label>
			Grant Link
			<%= f.url_field :grantlink %>
		</label>
		<label>
			Ext Web Link
			<%= f.url_field :labweb %>
		</label>
	</fieldset>

	<fieldset>
		<label>
			Building
			<%= f.select :building, [[" ", :null], 'BRF', 'KIN', 'LOV', 'MSR', 'PDB'] %>
		</label>
		<label>
			Office
			<%= f.text_field :office %>
		</label>
		<label>
			Phone
			<%= f.text_field :phone %>
		</label>
	</fieldset>

	<fieldset>
		<label>
			PI 1
			<%= f.text_field :pi1 %>
		</label>
		<label>
			PI 2
			<%= f.text_field :pi2 %>
		</label>
	</fieldset>

	<fieldset>
		<%= f.label :interest %>
		<%= f.text_area :interest %>
	</fieldset>

	<fieldset>
		<%= f.label :research %>
		<%= f.text_area :research %>
	</fieldset>

	<fieldset>
		<%= f.label :PubMed_link %>
		<%= f.text_field :pubmed %> **Link for PubMed bibliography**
	</fieldset>

	<fieldset>
		<%= f.label :google_scholar_link %>
		<%= f.text_field :scholar %> **Link for Google Scholar bibliography**
	</fieldset>

	<fieldset>
		<%= f.label :science_index_link %>
		<%= f.text_field :sci_index %> **Link for Science Index bibliography**
	</fieldset>

	<fieldset>
		<label>
			Chemical Senses
			<%= f.check_box :ra_cs %>
		</label>
		<label>
			Human Neuroscience
			<%= f.check_box :ra_hn %>
		</label>
		<label>
			Molecular Genetics
			<%= f.check_box :ra_mg %>
		</label>
		<label>
			Neurobiology
			<%= f.check_box :ra_nb %>
		</label>
		<label>
			Neuroendocrinology
			<%= f.check_box :ra_ne %>
		</label>
	</fieldset>

	<fieldset>
		<label>
			Start Date
			<%= f.select :startdate, (Date.today.year-25)..(Date.today.year+5), :selected => Date.today.year %>
		</label>
		<label>
			Graduation Date
			<%= f.select :graddate, (Date.today.year-5)..(Date.today.year+5), :selected => Date.today.year %> 
		</label>
	</fieldset>


	<%= f.submit %>
<% end %>