<tr class="people_row">
		  	<td>
		  		<div class="portrait">
		  			<% unless Rails.application.assets.find_asset("profiles/#{person.user_name}S.jpg") %>
			               <%= image_tag("profiles/defaultP.jpg") %>
			          <% else %>
			              <%= image_tag("profiles/#{person.user_name}S.jpg") %>
			          <% end %>
		  		</div>
		  	</td>
		  	<td class="names">
		  		<div class="inner">
		  			<p class="ra_icons">
		  				<%= link_to(friendly_person_path(person.position, person.user_name)) do %>
  							<strong><%= person.fname %> <%= person.lname %></strong>
						<% end %>
						<% if person.ra_cs == true %>
			            	<%= link_to image_tag("cs_icoS.png"), '/research/researchhub', :title => "Chemical Senses, Ingestive Behavior, and Obesity" %> 
			            <% end %>
			            <% if person.ra_hn == true %>
			            	<%= link_to image_tag("hn_icoS.png"), '/research/researchhub', :title => "Human Neuroscience and Animal Models of Cognition" %> 
			            <% end %>
			            <% if person.ra_mg == true %>
			            	<%= link_to image_tag("mg_icoS.png"), '/research/researchhub', :title => "Molecular Genetics, Proteomics, and Membrane Biophysics" %> 
			            <% end %>
			            <% if person.ra_nb == true %>
			            	<%= link_to image_tag("nb_icoS.png"), '/research/researchhub', :title => "Neurobiology of Brain Injury and Disease" %> 
			            <% end %>
			            <% if person.ra_ne == true %>
			            	<%= link_to image_tag("ne_icoS.png"), '/research/researchhub', :title => "Neuroendocrinology, Social Behavior, Stress, and Drug Addiction" %> 
			            <% end %>
					</p>
					
					<% if person.boss.blank? %>
							<p><%= person.title %></p>
						<% else %>
							<p><%= person.lab_name %> Lab</p>
						<% end %>
		  			
		  			<% if person.position == 'grad' %>
		  				<p>Graduate Student</p>
		  			<% elsif person.position == 'postdoc' %>
                          <p>Postdoctoral Associate</p>
                    <% elsif person.position == 'labman' %>
		  				<p>Lab Manager</p>
		  			<% elsif person.position == 'labtech' %>
		  				<p>Lab Tech</p>
		  			<% else %>
		  				<p>
		  					<%= person.position.capitalize %>
		  					<% if person.search == true %>
		  					 - <font color="red">Accepting Students</font>
		  					 <% end %>
		  				</p>
		  			<% end %>
		  		</div>
		  	</td>
		  	<td class="stats">
		  		<div class="inner">
		  			<p><%= person.school %></p>
		  			<p><%= person.building %> <%= person.office %></p>
		  			<p><%= person.phone %></p>
		  		</div>
		  	</td>
		  	<td class="mail">
		  		<div class="inner">
		  			<% if person.email.present? %>
							<p><%= person.email %></p>
						<% else %>
							<p><%= person.user_name %>@neuro.fsu.edu</p>
						<% end %>
		  		</div>
		  	</td>
		  </tr>